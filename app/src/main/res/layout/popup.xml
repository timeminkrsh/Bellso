<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:layout_marginBottom="50dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/payu_dimen_10dp"
        android:padding="@dimen/payu_dimen_10dp">

        <ImageView
            android:id="@+id/cancel_image"
            android:layout_width="@dimen/payu_dimen_20dp"
            android:layout_height="@dimen/payu_dimen_20dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/payu_dimen_10dp"
            android:layout_marginEnd="@dimen/payu_dimen_10dp"
            android:src="@drawable/cancell" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="We Received Your Ticket. "
            android:textColor="@color/c2"
            android:gravity="start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:padding="@dimen/payu_dimen_10dp"
            android:layout_marginEnd="@dimen/payu_dimen_10dp"/>
        <TextView
            android:id="@+id/tt"
            android:layout_below="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="We Call You Back soon"
            android:textColor="@color/c2"
            android:gravity="start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:padding="@dimen/payu_dimen_10dp"
            android:layout_marginEnd="@dimen/payu_dimen_10dp"/>
        <TextView
            android:id="@+id/ttd"
            android:layout_below="@+id/tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Thank you......"
            android:textColor="@color/c2"
            android:gravity="start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:padding="@dimen/payu_dimen_10dp"
            android:layout_marginEnd="@dimen/payu_dimen_10dp"/>
    </RelativeLayout>
</RelativeLayout>