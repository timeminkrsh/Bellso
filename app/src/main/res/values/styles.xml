<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>

    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">

        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>

    </style>
    <style name="customRatingBarr" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>
    <style name="TextStyleBNV">
        <item name="android:textSize">9sp</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/lato</item>

    </style>
    <style name="CardView." parent="CardView" >
        <item name="android:foreground">@drawable/gradient</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>

    </style>
    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="color">@color/colorPrimary</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="itemBackground">@color/white</item>
        <item name="fontFamily">@font/raleway</item>
    </style>
   <!-- <style name="BottomNavTheme" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="fontFamily">@font/raleway</item>
    </style>-->
    <style name="RatingBar" parent="Theme.AppCompat">
     <!--   <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/duskYellow</item>-->
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
    <item name="android:textSize">14sp</item>
    </style>

    <style name="SpinnerSort" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>
</resources>