<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/payu_dimen_5dp"
                    app:cardCornerRadius="@dimen/payu_dimen_5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/product_img"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/payu_dimen_180dp"
                            android:layout_margin="@dimen/payu_dimen_5dp"
                            android:src="@drawable/remove"
                            android:layout_gravity="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFF"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="@font/lato"
                                android:text="Saree"
                                android:lines="2"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/payu_dimen_5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/lato"
                                    android:text="1500"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/mrp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_toRightOf="@+id/price"
                                    android:fontFamily="@font/lato"
                                    android:text="mrp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />


                            </RelativeLayout>

                            <TextView
                                android:id="@+id/offer_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:textColor="@color/c2"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:text="50"
                                android:textSize="11sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/saveprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/lato"
                                android:text="Saree"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/lato"
                                android:singleLine="true"
                                android:text="30% OFF"
                                android:textColor="#4CAF50"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:visibility="gone" />



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <RatingBar
                                    android:id="@+id/ratting"
                                    style="@style/customRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="10dp"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:visibility="gone"
                                    android:stepSize="0.5" />

                                <TextView
                                    android:id="@+id/rattingcount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="10dp"
                                    android:layout_toRightOf="@+id/ratting"
                                    android:fontFamily="@font/lato"
                                    android:text="5.0"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rel_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/payu_dimen_5dp"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <!--<ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tag"
                app:tint="#000000" />-->


            <TextView
                android:id="@+id/stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_offer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/checkbox"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/delete"/>

            <!--<CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:button="@drawable/wishlist_selector"/>-->

        </FrameLayout>
    </FrameLayout>
</LinearLayout>