<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/aimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/payu_dimen_10dp" />

    <Button
        android:id="@+id/kycbutton"
        android:layout_width="@dimen/payu_dimen_100dp"
        android:layout_height="@dimen/payu_dimen_40dp"
        android:background="@drawable/button"
        android:text="OK"
        android:layout_marginTop="@dimen/payu_dimen_20dp"
        android:layout_marginBottom="@dimen/payu_dimen_20dp"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

</LinearLayout>