<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAddressActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lato"
                android:layout_margin="@dimen/payu_dimen_5dp"
                android:text="*refers to mandatory field to be filled"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittextborder"
                android:orientation="horizontal"
                android:padding="5dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato"
                    android:hint="Name* "
                    android:gravity="start"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittextborder"
                android:orientation="horizontal"
                android:gravity="start"

                android:padding="5dp">


                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="start"

                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato"
                    android:hint="Mobile Number* "
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:maxLength="10"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start"

                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittextborder"
                android:orientation="horizontal"
                android:padding="5dp">


                <EditText
                    android:id="@+id/et_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start"

                    android:drawablePadding="10dp"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato"
                    android:hint="House no* "
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:gravity="start"

                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittextborder"
                android:orientation="horizontal"
                android:padding="5dp">


                <EditText
                    android:id="@+id/et_line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="start"

                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato"
                    android:hint="Street* "
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:gravity="start"

                android:layout_marginEnd="20dp"
                android:background="@drawable/edittextborder"
                android:orientation="horizontal"
                android:padding="5dp">


                <EditText
                    android:id="@+id/et_line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato"
                    android:hint="City* "
                    android:gravity="start"

                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:gravity="start"

                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittextborder"
                android:orientation="horizontal"
                android:padding="5dp">

                <AutoCompleteTextView
                    android:id="@+id/atv_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="start"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato"
                    android:hint="Pincode* "
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:maxLength="6"
                    android:inputType="number"
                    android:focusable="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <!-- <EditText
                     android:id="@+id/et_pincode"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:drawablePadding="10dp"
                     android:gravity="start"

                     android:focusableInTouchMode="true"
                     android:fontFamily="@font/lato"
                     android:hint="Pincode "
                     android:textStyle="bold"
                     android:padding="8dp"
                     android:maxLength="6"
                     android:inputType="number"
                     android:focusable="false"
                     android:textColor="@color/black"
                     android:textSize="15sp" />-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittextborder"
                android:orientation="horizontal"
                android:padding="5dp">


                <EditText
                    android:id="@+id/et_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/lato"
                    android:gravity="start"
                    android:hint="Landmark* "
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
            <Button
                android:id="@+id/sumbit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button"
                android:fontFamily="@font/lato"
                android:layout_gravity="center"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"

                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>