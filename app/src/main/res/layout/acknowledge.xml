<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/payu_dimen_250dp"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/payu_dimen_200dp"
            android:layout_height="@dimen/payu_dimen_200dp"
            android:src="@drawable/cycle" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/payu_dimen_10dp"
            android:layout_toRightOf="@+id/image"
            android:fontFamily="@font/lato"
            android:text="mannkjnjkvnjknjknjknjkn"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="@dimen/payu_dimen_10dp"
            android:layout_marginTop="@dimen/payu_dimen_20dp"
            android:layout_toRightOf="@+id/image"
            android:fontFamily="@font/lato"
            android:text="Address: 17,Kalaivani St,Old Pallavaram, Main Rd, Keelkattalai, Chennai, Tamil Nadu 600117"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginStart="@dimen/payu_dimen_10dp"
            android:layout_marginTop="@dimen/payu_dimen_10dp"
            android:layout_toRightOf="@+id/image"
            android:fontFamily="@font/lato"
            android:text="Contact No: 12345678"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginStart="@dimen/payu_dimen_10dp"
            android:layout_marginTop="@dimen/payu_dimen_10dp"
            android:layout_toRightOf="@+id/image"
            android:fontFamily="@font/lato"
            android:text="Price: Rs 500"
            android:textColor="@color/black"
            android:textStyle="normal" />


    </RelativeLayout>
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:scaleX="10" />
</LinearLayout>