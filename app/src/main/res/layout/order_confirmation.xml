<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/cv_card" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="10dp" app:cardUseCompatPadding="true">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/ll_parent" android:padding="5dp" android:layout_width="match_parent" android:layout_height="110dp">
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:id="@+id/ivMenu" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/cart" android:adjustViewBounds="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2.5" android:layout_marginStart="5dp">
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/tv_pTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Product Title" android:inputType="textMultiLine" android:fontFamily="@font/lato"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_pqyt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:fontFamily="@font/lato"
                    android:text="Quantity: 1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/gold" android:gravity="center_horizontal" android:id="@+id/tv_pPrice" android:layout_width="0dp" android:layout_height="wrap_content" android:text="₹ 50" android:layout_weight="1" android:fontFamily="@font/lato"/>
            </LinearLayout>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:layout_gravity="start" android:id="@+id/tv_pwgt" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Size: 500 gm" android:fontFamily="@font/lato"/>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:layout_gravity="start" android:id="@+id/tv_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Colour: ₹40" android:fontFamily="@font/lato"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/gray" android:layout_gravity="start" android:id="@+id/tv_pId" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="cartid" android:fontFamily="@font/lato"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/grayy"  android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
</LinearLayout>