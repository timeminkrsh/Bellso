<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/week_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/gradientsss_border"
            android:fontFamily="@font/lato"
            android:padding="5dp"
            android:text="PV REPORT"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/li"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/id"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="Id"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/right"
        android:fontFamily="@font/lato"
        android:gravity="start"
        android:padding="@dimen/payu_dimen_10dp"
        android:singleLine="true"
        android:text="Left"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/lato"
        android:gravity="start"
        android:padding="@dimen/payu_dimen_10dp"
        android:singleLine="true"
        android:text="Right"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/payu_dimen_10dp"
        android:layout_height="0.7dp"
        android:layout_below="@+id/right"
        android:layout_marginStart="5dp"
        android:background="@color/black"
        android:scaleX="10" />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_below="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="Carry Forward PV"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cfl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@+id/cfr"
            android:fontFamily="@font/lato"
            android:gravity="start"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cfr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="0"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/payu_dimen_10dp"
            android:layout_height="0.7dp"
            android:layout_below="@+id/cfr"
            android:layout_marginStart="5dp"
            android:background="@color/black"
            android:scaleX="10" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_below="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ttee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:textStyle="bold"

            android:text="Current Week PV"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cwl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@+id/cwr"
            android:fontFamily="@font/lato"
            android:gravity="start"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cwr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="0"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/payu_dimen_10dp"
            android:layout_height="0.7dp"
            android:layout_below="@+id/cwr"
            android:layout_marginStart="5dp"
            android:background="@color/black"
            android:scaleX="10" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_below="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ttrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="Total PV"
            android:textStyle="bold"

            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@+id/tr"
            android:fontFamily="@font/lato"
            android:gravity="start"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="0"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/payu_dimen_10dp"
            android:layout_height="0.7dp"
            android:layout_below="@+id/tr"
            android:layout_marginStart="5dp"
            android:background="@color/black"
            android:scaleX="10" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r5"
        android:layout_below="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ttrfr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:textStyle="bold"

            android:text="Matched  PV"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mpv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@+id/tr1"
            android:fontFamily="@font/lato"
            android:gravity="start"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:text="0"
            android:textAlignment="center"
            android:singleLine="true"
            android:layout_marginEnd="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/payu_dimen_10dp"
            android:layout_height="0.7dp"
            android:layout_below="@+id/tr1"
            android:layout_marginStart="5dp"
            android:background="@color/black"
            android:scaleX="10" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r6"
        android:layout_below="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ttrr45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="Payout AmountV"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@+id/e"
            android:fontFamily="@font/lato"
            android:gravity="start"
            android:padding="@dimen/payu_dimen_10dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:padding="@dimen/payu_dimen_10dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:text="0"
            android:textAlignment="center"
            android:singleLine="true"
            android:layout_marginEnd="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/payu_dimen_10dp"
            android:layout_height="0.7dp"
            android:layout_below="@+id/e"
            android:layout_marginStart="5dp"
            android:background="@color/black"
            android:scaleX="10" />
    </RelativeLayout>


</RelativeLayout>