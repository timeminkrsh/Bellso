<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.taprocycle.service.Activity.LoginActivity"
    android:orientation="vertical">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/payu_dimen_250dp"
    android:layout_marginTop="@dimen/payu_dimen_30dp"
    android:layout_marginBottom="@dimen/payu_dimen_30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>
</RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ret"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/payu_dimen_15dp"
            android:text="@string/welcome"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="normal" />
        <TextView
            android:layout_below="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Login to continue"
            android:layout_marginTop="@dimen/payu_dimen_15dp"
            android:textStyle="normal"
            android:id="@+id/wel_login"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_edit_border"
            android:drawableEnd="@drawable/phon"
            android:drawableTint="@color/yellow"
            android:layout_below="@+id/wel_login"
            android:hint="Enter Your Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/payu_dimen_15dp"
            android:background="@drawable/button"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>